<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="01" author="florian">
        <createTable tableName="clients" remarks="A table to contain all clients">

            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="display_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="nume_client" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="nr_registru_client" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="cui_client" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="banca_client" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="nr_cont_client" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="adresa_client" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="numar_contract" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="contract_din_data_de" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="pret_per_unitate" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="sap_id" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>